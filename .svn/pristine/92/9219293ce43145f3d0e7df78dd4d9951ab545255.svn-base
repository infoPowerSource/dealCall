    font-size: inherit;
    border-radius: 2px;
    background-color: #fff;
    width: 250% !important;
    left: 0 !important;
    position: absolute;
    top: 37px;    
    height: 220px !important;
    overflow-y: auto !important;
	cursor: pointer;
}

