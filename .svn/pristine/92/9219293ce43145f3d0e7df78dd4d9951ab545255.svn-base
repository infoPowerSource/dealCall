.input-warnning{
	border-color:red!important;
}
.conf-begin-time-wrap {
	position: relative;
	float: left;
	margin-right: 10px;
	height: 36px;
	width: 270px;
	padding: 7px;
	border-radius: 2px;
  	background-color: #ffffff;
  	border: solid 1px #c5c9cd;
  	color: #4a4a4a;
  	font-size: 14px;
  	z-index: 100;
}
.conf-begin-time-wrap * {
	vertical-align: middle;
}
.conf-begin-time-wrap .placeholder {
	font-size: 14px;
}
.input-block.task .conf-begin-time-wrap .input-pub {
	width: 82px;
	margin-right: 8px;
	height: 22px;
	line-height: 22px;
	padding: 0;
	color: #4a4a4a !important;
}
.input-block.task .conf-begin-time-wrap .weekday {
	float: left;
	margin-right: 50px;
	height: 22px;
	line-height: 22px;
}
.input-block.task .conf-begin-time-wrap input {
	border: none;
}
.input-block.task .conf-begin-time-wrap input:hover,
.input-block.task .conf-begin-time-wrap input:focus {
	border: none !important;
	box-shadow: none !important;
}
.input-block.task .conf-begin-time-wrap .time-s {
	float: left;
	width: 25px;
	height: 22px;
	line-height: 22px;
	cursor: pointer;
}
.input-block.task .conf-begin-time-wrap .hms {
	float: left;
	margin-right: 12px;
	height: 22px;
	line-height: 22px;
}

.input-block.task .conf-begin-time-wrap .time-list {
	position: absolute;
	top: 36px;
	height: 200px;
	overflow-y: auto;
	border: 1px solid #c5c9cd;
	background-color: #fff;
	text-align: center;
	border-radius: 2px;
	cursor: pointer;
	display: none;
}
.input-block.task .conf-begin-time-wrap .time-list li {
	padding: 2px 12px;
}
.input-block.task .conf-begin-time-wrap .time-list li:hover {
	background: #f5f5f5;
}
.input-block.task .conf-begin-time-wrap .time-list li.active {
	background: #f5f5f5;
}
.input-block.task .conf-begin-time-wrap .hour-list {
	left: 173px;
}
.input-block.task .conf-begin-time-wrap .minute-list {
	left: 214px;
}
.conf-user-list {
	position: absolute;
	width: 540px;
	display: none;
	border-radius: 2px;
  	background-color: #ffffff;
  	box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.2);
  	border: solid 1px #c5c9cd;
  	overflow: hidden;
}
.conf-user-list .user-item {
	overflow: hidden;
	height: 36px;
	line-height: 36px;
	font-size: 16px;
  	color: #4a4a4a;
  	cursor: pointer;
}
.conf-user-list .user-item:hover {
	background-color: #f2f3f5;
}
.conf-user-list .user-item-info {
	float: left;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.conf-user-list .user-name {
	margin-right: 10px;
	padding: 0 5px;
	width: 100px;
	height: 36px;
}
.conf-user-list .user-contry {
	padding-left: 11px;
	width: 50px;
	height: 36px;
}
.conf-user-list .user-area {
	padding-left: 9px;
	width: 60px;
	height: 36px;
}
.conf-user-list .user-phone {
	padding-left: 9px;
	width: 110px;
	height: 36px;
}
.conf-user-list .user-email {
	padding-left: 36px;
	width: 145px;
	height: 36px;
}
.form-fgpw .form-box .input-bt-line {
